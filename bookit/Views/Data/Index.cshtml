@model IEnumerable<bookit.Models.DataModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutData.cshtml";
}
<div class="text-center">
    <h2>Book list</h2>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            In stock
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{  
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            <button style="border: none; background: none">
                @Html.ActionLink("", "Edit", new {Id = item.id}, new {@class="fa-solid fa-file-pen fa-xl", @style="color: #198754;"})
            </button>
            &nbsp;&nbsp;
            <button style="border: none; background: none">
                @Html.ActionLink("", "Delete", new {Id = item.id}, new {@class="fa-solid fa-trash fa-xl", @style="color: #198754;"})
            </button>
        </td>
    </tr>
}
</table>
</div>
