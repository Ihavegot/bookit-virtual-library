@model bkit.Models.DataModel

@{
    ViewBag.Title = "EditForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ProcessCreate", "Admin")){
    @Html.AntiForgeryToken()

    <h3>Edit row in database</h3>
    <div class="form-horizontal text-center">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group d-flex justify-content-center mt-3">
            <div class="col-md-10">
                <b>Title</b>
                @Html.EditorFor(model => model.title, new { htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group d-flex justify-content-center mt-1">
            <div class="col-md-10">
                <b>Author</b>
                @Html.EditorFor(model => model.author, new { htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        <div class="form-group d-flex justify-content-center mt-1">
            <div class="col-md-10">
                <b>Quantity</b>
                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new {@min="0" , @class = "form-control"}})
            </div>
        </div>
        <div>
            <input type="hidden" name="id" value="@Model.id" />
        </div>
        <div class="form-group d-flex justify-content-center mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-success me-2" />
            </div>
        </div>
    </div>
}